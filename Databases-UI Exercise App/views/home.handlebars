<div class="jumbotron">
  <h1 class="display-4" style="font-size:3em">Welcome to Workout Tracker</h1>
  <p class="lead">View, Add, Update and Delete your Exercises</p>
</div>

<body style="margin: 2rem">
<div id="accordion">
  <div class="card">
    <div class="card-header" id="headingOne">
      <h5 class="mb-0">
        <button class="btn btn-light" data-toggle="collapse" data-target="#collapseOne" aria-expanded="false" aria-controls="collapseOne">
          Add Exercise
        </button>
      </h5>
    </div>
    <div id="collapseOne" class="collapse" aria-labelledby="headingOne" data-parent="#accordion">
      <div class="card-body" style="width: 90%; margin: auto">
        <h4>Add an Exercise:</h4>
        <form id="addExercise">
            <fieldset>
                <div class="form-group row">
                    <label class="col-sm-3 col-form-label">Exercise:</label>
                    <div class="col-sm-9">
                        <input type="text" name="name" id="exercise" placeholder="Exercise">
                    </div>
                </div>
                <div class="form-group row">
                    <label class="col-sm-3 col-form-label">Reps:</label>
                    <div class="col-sm-9">
                        <input type="number" name="reps" id="reps" placeholder="10">
                    </div>
                </div>
                <div class="form-group row">
                    <label class="col-sm-3 col-form-label">Weight:</label>
                    <div class="col-sm-9">
                       <input type="number" name="weight" id="weight" placeholder="5">
                    </div>
                </div>
                <div class="form-group row">
                    <label class="col-sm-3 col-form-label">Weight Units:</label>
                    <div class="col-sm-9">
                        <input id="lbs" type="radio" name="units" value="1" checked>lb
                        <input type="radio" name="units" value="0">kg<br />
                    </div>
                </div>
                <div class="form-group row">
                    <label class="col-sm-3 col-form-label">Date:</label>
                    <div class="col-sm-9">
                        <input type="date" name="date" id="date">
                    </div>
                </div>
                <input type="submit" name="addExercise" value="Submit" id="submitExercise" class="btn btn-primary">
            </fieldset>
        </form>
    </div>
   </div>
  </div>
</div>
  <div class="card">
    <div class="card-header" id="headingTwo">
      <h5 class="mb-0">
        <button class="btn btn-light" data-toggle="collapse" data-target="#collapseTwo" aria-expanded="true" aria-controls="collapseTwo">
          Your Exercises
        </button>
      </h5>
    </div>
    <div id="collapseTwo" class="collapse in" aria-labelledby="headingTwo" data-parent="#accordion">
      <div class="card-body">
        <table id="workouts" class="table table-bordered table-hover" style="width: 90%; margin: auto">
            <tr>
                <th scope="col">Name</th>
                <th scope="col">Reps</th>
                <th scope="col">Weight</th>
                <th scope="col">Units</th>
                <th scope="col">Date</th>
            </tr>

                {{#data}}
                    <tr>
                        <td>{{this.name}}</td>
                        <td>{{this.reps}}</td>
                        <td>{{this.weight}}</td>
                        <td>{{this.lbs}}</td>
                        <td>{{date}}</td>
                        <td><a href="updateTable?id={{this.id}}"><button type="button" name="update" class="btn btn-info">Update</button></a></td>
                        <td name={{this.id}}><button onclick="deleteEntry({{this.id}})" type="button" name="delete" class="btn btn-danger">Delete</button></td>
                    </tr>
                {{/data}}
        </table>
        </div>
      </div>
    </div>
  </div>
</body>
